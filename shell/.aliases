# === Global ===

alias ls='ls -a'
alias \.\.='cd ..'

alias lcl='cd ~/Local\ sites/'
alias dsk='cd ~/Desktop/'
alias dl='cd ~/Downloads/'
alias df='cd ~/.dotfiles/'
alias cdlf='lfcd'

alias code='code .'
alias open='open .'
alias nano='sudo nano'

alias re='clear; exec zsh -l'
alias hosts='sudo nano /etc/hosts'
alias fdns='sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder'
alias dnsf='fdns'

# === Git ===

alias lg='lazygit'
alias gp='git pull'

# === Composer ===

alias cin='composer install'
alias cup='composer upgrade'
alias crm='composer remove'
alias cre='composer require'

# === Laravel ===

alias pa='php artisan'
alias pam='php artisan migrate'
alias pamr='php artisan migrate:rollback'
alias par='php artisan migrate:refresh'

# === Yarn ===

alias yb='yarn build'
alias yd='yarn dev'

# === Other ===

alias setalias='nano ~/.dotfiles/shell/.aliases'
alias setsshhosts='nano ~/.ssh/config'
alias getsshhosts="grep -E '^Host ' ~/.ssh/config | awk '{print $2}'"
alias getsshkey='cat ~/.ssh/id_ed25519.pub'
