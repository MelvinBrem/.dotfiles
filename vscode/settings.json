{
  // Workbench settings
  "workbench.iconTheme": "Monokai Pro Icons",
  "workbench.startupEditor": "none",

  // Git settings
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.suggestSmartCommit": false,
  "git.ignoreRebaseWarning": true,
  "git.openRepositoryInParentFolders": "never",

  // Editor settings
  "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
  "editor.formatOnSave": true,
  "editor.hover.delay": 200,
  "editor.hover.hidingDelay": 200,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Markdown settings
  "markdown.preview.fontSize": 12,

  // Explorer settings
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // File associations
  "files.associations": {
    ".deployignore": "ignore",
    "*.php": "php",
    "*.module": "php"
  },

  // Extensions settings
  "extensions.ignoreRecommendations": true,

  // Terminal settings
  "terminal.integrated.fontSize": 13,

  // Window settings
  "window.zoomLevel": 1,

  // SCM settings
  "scm.inputFontSize": 12,

  // PHP settings
  "php.suggest.basic": true,
  "php.validate.executablePath": "/opt/homebrew/opt/php",
  "phpunit.colors": "",
  "phpunit.args": [],

  // Intelephense settings
  "intelephense.completion.maxItems": 50,
  "intelephense.files.maxSize": 5000000,

  // Prettier settings
  "prettier.printWidth": 120,

  // Security settings
  "security.promptForLocalFileProtocolHandling": false,
  "security.workspace.trust.untrustedFiles": "open",

  // Diff editor settings
  "diffEditor.ignoreTrimWhitespace": false,
  "files.saveConflictResolution": "overwriteFileOnDisk",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "workbench.colorTheme": "Monokai Pro",
  "gitlens.blame.ignoreWhitespace": true,
  "editor.tabSize": 2,
  "editor.dragAndDrop": false,
  "gitmoji.showEmojiCode": true,
  "prettier.trailingComma": "all",
  "search.exclude": {
    "**/.git/**": true
  },
  "bladeFormatter.format.indentInnerHtml": true,
  "bladeFormatter.format.noMultipleEmptyLines": true,
  "bladeFormatter.format.noSingleQuote": true,
  "bladeFormatter.format.sortTailwindcssClasses": true,
  "search.quickOpen.includeHistory": false,
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[twig]": {
    "editor.defaultFormatter": "mblode.twig-language-2"
  }
}
